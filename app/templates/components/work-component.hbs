<div class="work-image">

    {{#link-to 'work.projects' work.id}}
      <p class="work-projects-link">View Projects</p>
      <img src={{work.image}}>
    {{/link-to}}


</div>
<div class="work-description">
  <p class="work-details"><span class="work-role">{{work.role}} - </span>{{work.description}}</p>
  <p class="work-dates">{{format-date work.startDate}} - {{format-date work.endDate}}</p>
{{#if isProjects}}
  <p class="work-projects">{{projectsCount}} {{isProjectsPlural}}</p>
{{/if}}
</div>

      


{{#if session.isAuthenticated}}

  {{#link-to 'work.edit' work.id class="button is-dark work-edit-btn"}}
    Edit Work
  {{/link-to}}
  
{{/if}}

